{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build helloworld.cpp",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "helloworld.cpp",
                "-o",
                "helloworld.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile helloworld.cpp using g++"
        },
        {
            "label": "Run helloworld.exe",
            "type": "shell",
            "command": ".\\helloworld.exe",
            "dependsOn": "Build helloworld.cpp",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}